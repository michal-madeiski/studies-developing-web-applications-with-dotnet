@{
    ViewBag.Title = "Równanie kwadratowe";
}

<h3>Kalkulator równań kwadratowych</h3>
<div class="equation-box">
    <p>Równanie: @ViewBag.equation</p>
    <p class=@ViewBag.cssClass>Opis: @ViewBag.message</p>
</div>
<div class="solution-box">
    @if (@ViewBag.x != null)
    {
        <p class=@ViewBag.cssClass>Rozwiązanie - @ViewBag.solution: @ViewBag.x</p>
    }

    @if (@ViewBag.x1 != null && @ViewBag.x2 != null)
    {
        <p class=@ViewBag.cssClass>Rozwiązanie: @ViewBag.solution@ViewBag.x1 x2=@ViewBag.x2</p>
    }

    @if (@ViewBag.x == null && @ViewBag.x1 == null && @ViewBag.x2 == null)
    {
        <p class=@ViewBag.cssClass>Rozwiązanie: @ViewBag.solution</p>
    }
</div>

<p>
    <a href="/">Powrót do strony głównej</a>
</p>