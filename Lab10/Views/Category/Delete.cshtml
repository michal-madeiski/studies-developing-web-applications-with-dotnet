    <i class="bi bi-exclamation-triangle-fill"></i> <strong>Warning!</strong> This action will also delete all articles from this category.
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
